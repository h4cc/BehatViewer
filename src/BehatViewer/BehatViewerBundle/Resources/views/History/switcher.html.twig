<div class="pull-right">
    <div class="btn-group">
        {% if is_granted('EDIT', project) %}
            <a href="{{ path('behatviewer.project.delete', {"project": project.slug, "username": project.user.username}) }}" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger" title="Delete"><i class="icon-trash"></i></a>
            <a href="{{ path('behatviewer.project.edit', {"project": project.slug, "username": project.user.username}) }}" class="btn" title="Edit"><i class="icon-edit"></i></a>
        {% endif %}
        <button data-toggle="dropdown" class="btn dropdown-toggle">
            <i class="icon-eye-open"></i>
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" style="left: -40px">
            <li><a href="{{ path("behatviewer.project.switch", {"type": "list", "project": project.slug, "username": project.user.username}) }}" title="List view"><i class="icon-tasks"></i> List</a></li>
            <li><a href="{{ path("behatviewer.project.switch", {"type": "thumb", "project": project.slug, "username": project.user.username}) }}" title="Dashboard"><i class="icon-dashboard"></i> Dashboard</a></li>
        </ul>
    </div>
</div>
